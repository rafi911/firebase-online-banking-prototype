## connect with back-end ####
1.  in startup class

public void ConfigureServices(IServiceCollection services)
        {
            services.AddCors(options =>
            {
                options.AddPolicy("AllowSpecificOrigin",
                    builder => builder.WithOrigins("http://localhost:4200"));
            });
            services.AddMvc();
        }

        // This method gets called by the runtime. Use this method to configure the HTTP request pipeline.
        public void Configure(IApplicationBuilder app, IHostingEnvironment env)
        {
            if (env.IsDevelopment())
            {
                app.UseDeveloperExceptionPage();
            }
            //app.UseCors("CorsPolicy");
            //app.UseCors(builder => builder.WithOrigins(""))
            // Shows UseCors with named policy.
            app.UseCors("AllowSpecificOrigin");

            app.UseMvc();
        }
       
     2. in Controller class
     [EnableCors("AllowSpecificOrigin")]
     
     ## install bootstrap ##
     https://medium.com/@sunilk/getting-started-angular-6-and-ng-bootstrap-4-4b314e015c1c
     
     ## create Drop down
     1. add grid system bootstrap, import { ReactiveFormsModule } from '@angular/forms';
     2. add drop down
     ## html##
     <mat-form-field>
  <mat-select placeholder="Favorite animal" [formControl]="animalControl" required>  
    <mat-option *ngFor="let animal of animals" [value]="animal">
      {{animal.value}}
    </mat-option>
  </mat-select>
  <mat-error *ngIf="animalControl.hasError('required')">Please choose an animal</mat-error>
  <!-- <mat-hint>{{animalControl.value?.sound}}</mat-hint> -->
</mat-form-field>
 
 ## ts ##
 import {FormControl, Validators} from '@angular/forms';
 interface Animal {
  value: string;
}
  animalControl = new FormControl('', [Validators.required]);
  animals: Animal[] = [
    {value: 'Dog'},
    {value: 'Cat'},
    {value: 'Cow'},
    {value: 'Fox'},
  ];
  
  
 3.  ## pass data to parent comp from child comp
 in child component,
 import { Component, Input  } from '@angular/core';
  

